{
  "description": "Token to represent a variety of tokens for certain condition",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "default": "Conditional"
    },
    "conditions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "condition": {
            "$ref": "../filter/bursarExportFilter.json"
          },
          "value": {
            "$ref": "bursarExportDataToken.json"
          }
        },
        "required": ["condition", "value"]
      }
    },
    "else": {
      "$ref": "bursarExportDataToken.json"
    }
  },
  "additionalProperties": false,
  "required": ["type", "conditions", "else"]
}
