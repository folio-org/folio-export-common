{
  "description": "Transfer criteria",
  "type": "object",
  "properties": {
    "conditions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "condition": {
            "$ref": "../filter/bursarExportFilter.json"
          },
          "owner": {
            "type": "string",
            "format": "uuid"
          },
          "account": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false,
        "required": ["conditions", "owner", "account"]
      }
    },
    "else": {
      "type": "object",
      "description": "pair of owner and account to transfer fees/fines that do not meet any specified conditions to",
      "properties": {
        "owner": {
          "type": "string",
          "format": "uuid"
        },
        "account": {
          "type": "string",
          "format": "uuid"
        }
      }
    }
  },
  "additionalProperties": false,
  "required": ["conditions", "else"]
}
