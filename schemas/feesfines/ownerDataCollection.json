{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Collection of owners",
  "OwnerDataCollection": {
    "type": "object",
    "properties": {
      "owners": {
        "description": "List of owner items",
        "type": "array",
        "id": "ownersData",
        "items": {
          "type": "object",
          "$ref": "owner.json#/Owner"
        }
      },
      "totalRecords": {
        "type": "integer"
      }
    },
    "required": [
      "owners",
      "totalRecords"
    ]
  }
}
